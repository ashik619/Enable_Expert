<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:id="@+id/popup_element"
    android:background="@drawable/dialog_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register with us as an Expert Docter"
        android:textSize="16dp"
        android:id="@+id/textView2"
        android:textColor="@color/textcolor"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact email"
        android:textSize="12dp"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:textSize="14dp"
        android:hint="Enter email address"
        android:background="@drawable/text_input_bg2"
        android:paddingLeft="5dp"
        android:layout_marginTop="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MCI registered Name"
            android:textSize="12dp"
            android:layout_below="@+id/email_forgot"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:inputType="text"
            android:hint="Enter Name"
            android:textSize="14dp"
            android:background="@drawable/text_input_bg2"
            android:paddingLeft="5dp"
            android:layout_marginTop="0dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MCI registration number"
        android:textSize="12dp"
        android:id="@+id/textView4"
        android:layout_below="@id/email_forgot"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mci_reg"
            android:inputType="text"
            android:hint="Enter MCI regt no"
            android:textSize="14dp"
            android:background="@drawable/text_input_bg2"
            android:paddingLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact number"
            android:textSize="12dp"
            android:layout_below="@id/email_forgot"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/c_num"
            android:inputType="phone"
            android:hint="Enter contact number"
            android:textSize="14dp"
            android:background="@drawable/text_input_bg2"
            android:paddingLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter message (optional)"
            android:textSize="12dp"
            android:layout_below="@id/email_forgot"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:inputType="text"
            android:hint="Enter message"
            android:textSize="14dp"
            android:background="@drawable/text_input_bg2"
            android:paddingLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Submit"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:id="@+id/okbutton"
        android:background="@drawable/button_bg"
        android:onClick="okbutton"/>

</RelativeLayout>
